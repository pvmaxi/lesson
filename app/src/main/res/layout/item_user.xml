<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_marginLeft="21dp"
    android:layout_marginTop="11dp"
    android:layout_marginRight="21dp"
    android:layout_height="wrap_content"
    tools:ignore="MissingConstraints"
    android:background="@drawable/ic_rectangle_background">


    <ImageView
        android:id="@+id/avatar"
        android:layout_width="90dp"
        android:layout_height="95dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="28dp"
        android:layout_marginBottom="27dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/ic_launcher_round"/>

    <LinearLayout
        android:id="@+id/user_info"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="14dp"
        android:layout_marginTop="18dp"
        android:orientation="vertical"
        app:layout_constraintStart_toEndOf="@+id/avatar"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_medium"
            android:text="TextView"
            android:textColor="#555"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/from"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/roboto"
            android:text="TextView"
            android:textColor="#80555555"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/last_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/roboto_light"
            android:text="TextView"
            android:textColor="#80555555"
            android:textSize="10sp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/photography"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="12dp"
        app:layout_constraintStart_toEndOf="@+id/avatar"
        app:layout_constraintTop_toBottomOf="@+id/user_info"
        app:srcCompat="@drawable/ic_art_photography"/>

    <ImageView
        android:id="@+id/sport_mountainbike"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="29dp"
        android:layout_marginTop="12dp"
        app:layout_constraintStart_toEndOf="@+id/photography"
        app:layout_constraintTop_toBottomOf="@+id/user_info"
        app:srcCompat="@drawable/ic_sports_mountainbike_2" />

    <ImageView
        android:id="@+id/cello"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="29dp"
        android:layout_marginTop="12dp"
        app:layout_constraintStart_toEndOf="@+id/sport_mountainbike"
        app:layout_constraintTop_toBottomOf="@+id/user_info"
        app:srcCompat="@drawable/ic_playmusic_cello"/>

    <TextView
        android:id="@+id/text_photography"
        android:layout_width="55dp"
        android:layout_height="17dp"
        android:layout_marginStart="7dp"
        android:layout_marginTop="3dp"
        android:fontFamily="@font/roboto_light"
        android:text="Фотография"
        android:textAlignment="center"
        android:gravity="center"
        android:textColor="#80555555"
        android:textSize="7sp"
        app:layout_constraintStart_toEndOf="@+id/avatar"
        app:layout_constraintTop_toBottomOf="@+id/photography" />

    <TextView
        android:id="@+id/bike"
        android:layout_width="55dp"
        android:layout_height="17dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="3dp"
        android:fontFamily="@font/roboto_light"
        android:gravity="center"
        android:text="Велоспорт"
        android:textAlignment="center"
        android:textColor="#80555555"
        android:textSize="7sp"
        app:layout_constraintStart_toEndOf="@+id/text_photography"
        app:layout_constraintTop_toBottomOf="@+id/sport_mountainbike" />

    <TextView
        android:id="@+id/classic_music"
        android:layout_width="55dp"
        android:layout_height="17dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="3dp"
        android:fontFamily="@font/roboto_light"
        android:gravity="center"
        android:text="Классическая музыка"
        android:textAlignment="center"
        android:textColor="#80555555"
        android:textSize="7sp"
        app:layout_constraintStart_toEndOf="@+id/bike"
        app:layout_constraintTop_toBottomOf="@+id/cello" />

    <ImageView
        android:id="@+id/scroll"
        android:layout_width="5dp"
        android:layout_height="12dp"
        android:layout_marginTop="29dp"
        android:layout_marginEnd="26dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/cello"
        app:layout_constraintTop_toBottomOf="@+id/user_info"
        app:srcCompat="@drawable/ic_scrol" />

</androidx.constraintlayout.widget.ConstraintLayout>