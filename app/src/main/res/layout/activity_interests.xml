<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="MissingConstraints">

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="101dp"
        android:background="#01B8BA"
        android:gravity="center">

        <ImageView
            android:id="@+id/fz_logo"
            android:layout_width="47dp"
            android:layout_height="47dp"
            app:srcCompat="@drawable/ic_fz_icon" />

    </LinearLayout>

    <TextView
        android:id="@+id/textView6"
        android:layout_width="304dp"
        android:layout_height="43dp"
        android:layout_marginTop="17dp"
        android:fontFamily="@font/roboto"
        android:text="Browse interests from the icons or search for specific things."
        android:textColor="#4A4A4A"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="318dp"
        android:layout_height="93dp"
        android:layout_marginTop="17dp"
        android:fontFamily="@font/roboto"
        android:text="(such as... Jazz, Horror movies, Salsa).
        \n\nClicking on an icon will open various options. Check them all! :)"
        android:textColor="#4A4A4A"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <ImageView
        android:id="@+id/interests_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="94dp"
        android:layout_marginTop="48dp"
        android:background="@drawable/ic_group_6"
        app:layout_constraintEnd_toStartOf="@+id/imageView6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="117dp"
        android:layout_marginEnd="43dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/interests_group"
        app:layout_constraintTop_toBottomOf="@+id/textView7"
        app:srcCompat="@drawable/ic_finger"/>

    <TextView
        android:layout_width="311dp"
        android:layout_height="50dp"
        android:layout_marginBottom="12dp"
        android:background="@drawable/ic_rectangle_move"
        android:fontFamily="@font/montserrat"
        android:gravity="center"
        android:text="GOT IT!"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>