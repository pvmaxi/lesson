<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#01B8BA"
    tools:ignore="MissingConstraints">

    <ImageView
        android:id="@+id/image_logo_frz"
        android:layout_width="260dp"
        android:layout_height="137.09dp"
        android:layout_gravity="center"
        android:layout_marginTop="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_fz_logo_background"/>

    <TextView
        android:id="@+id/text_move"
        android:layout_width="288dp"
        android:layout_height="88dp"
        android:layout_gravity="center"
        android:layout_marginTop="27.91dp"
        android:fontFamily="@font/montserrat"
        android:lineHeight="29.26sp"
        android:text="Moved to a new city? Or just looking to make new friends?"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:typeface="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image_logo_frz"/>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="59dp"
        android:layout_height="10dp"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_move"
        app:srcCompat="@drawable/ic_group_reg" />

    <TextView
        android:id="@+id/button_reg_fb"
        android:layout_width="303dp"
        android:layout_height="50dp"
        android:layout_marginTop="70dp"
        android:background="@drawable/ic_rectangle_fb"
        android:fontFamily="@font/montserrat"
        android:gravity="center_horizontal|center_vertical"
        android:lineHeight="22sp"
        android:text="Sign IN with Facebook"
        android:textAllCaps="true"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="303dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/ic_rectangle_google"
        android:fontFamily="@font/montserrat"
        android:gravity="center_horizontal|center_vertical"
        android:lineHeight="22sp"
        android:text="Sign In with GOOGLE"
        android:textAllCaps="true"
        android:textColor="#FFFFFF"
        android:textSize="18dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_reg_fb" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="65dp"
        android:layout_height="0dp"
        android:layout_marginStart="43dp"
        android:layout_marginTop="51dp"
        android:layout_marginEnd="2dp"
        app:layout_constraintEnd_toStartOf="@+id/button3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:srcCompat="@drawable/ic_line_11" />

    <TextView
        android:id="@+id/button3"
        android:layout_width="155dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/montserrat"
        android:gravity="center_horizontal|center_vertical"
        android:text="Or use Email"
        android:textAllCaps="false"
        android:textColor="#2A2C2D"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        tools:layout_editor_absoluteX="128dp" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginTop="51dp"
        android:layout_marginEnd="61dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/button3"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:srcCompat="@drawable/ic_line_11" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="255dp"
        android:layout_height="22dp"
        android:layout_marginTop="15dp"
        android:gravity="center_horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button3">

        <TextView
            android:id="@+id/text_register"
            android:layout_width="120dp"
            android:layout_height="22dp"
            android:layout_marginStart="55dp"
            android:layout_marginEnd="15dp"
            android:fontFamily="@font/montserrat"

            android:text="Register"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="#2A2C2D"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/text_login"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button3" />

        <TextView
            android:id="@+id/text_login"
            android:layout_width="120dp"
            android:layout_height="22dp"
            android:layout_marginEnd="65dp"
            android:fontFamily="@font/montserrat"

            android:text="Login"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="#2A2C2D"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/text_register"
            app:layout_constraintTop_toBottomOf="@+id/button3" />

    </LinearLayout>

    <TextView
        android:id="@+id/text_end"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_marginTop="25dp"
        android:fontFamily="@font/roboto"
        android:gravity="center_vertical"
        android:lineHeight="17sp"
        android:text="By registering you accept our Terms &amp; Condition and Privacy Policy"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="11dp"
        android:typeface="normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        tools:ignore="RtlCompat" />


</androidx.constraintlayout.widget.ConstraintLayout>